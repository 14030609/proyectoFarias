<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        android:elevation="3dp"
        card_view:cardUseCompatPadding="true"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">



            <TextView
                android:id="@+id/tvCustomersName"
                android:text="Customers Name"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
               />
            <TextView
                android:id="@+id/tvCustomersEmail"
                android:text="CsutomersEmail"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="@color/colorDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvCustomersName"/>

            <TextView
                android:id="@+id/tvCustomersAddress"
                android:text="Customers Address"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="@color/colorDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvCustomersEmail"/>
            <TextView
                android:id="@+id/tvCustomersCompras"
                android:text="Total de Compras"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="@color/colorDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvCustomersAddress"/>

            <TextView
                android:id="@+id/tvCustomersFechaCreacion"
                android:text="Fecha de Creacion"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="@color/colorDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvCustomersCompras"/>

            <TextView
                android:id="@+id/tvCustomersRol"
                android:text="Rol"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="@color/colorDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvCustomersFechaCreacion"/>

            <TextView
                android:id="@+id/tvCustomersUserName"
                android:text="UserName"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="@color/colorDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvCustomersRol"/>

            <TextView
                android:id="@+id/tvCustomersTotalGastado"
                android:text="TotalGastado"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="@color/colorDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvCustomersUserName"/>

            <TextView
                android:id="@+id/tvCustomersDireccionFacturacion"
                android:text="Direccion Facturacion"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="@color/colorDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvCustomersTotalGastado"/>

            <TextView
                android:id="@+id/tvCustomersDireccionEnvio"
                android:text="Direccion de Envio"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="@color/colorDarkGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvCustomersDireccionFacturacion"/>





        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>